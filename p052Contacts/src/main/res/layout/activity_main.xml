<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:paddingBottom="16dp"
        android:src="@drawable/banner" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/add_profile_pic_icon"
        android:background="@color/white"
        android:layout_alignBottom="@+id/banner"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"/>



    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_below="@id/banner"
        android:layout_alignBottom="@id/name"
        android:src="@drawable/name_icon80" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_icon"
        android:layout_below="@id/banner"
        android:layout_marginEnd="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginStart="9dp"
            android:hint="Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_below="@id/user_icon"
        android:layout_alignBottom="@id/phone"
        android:src="@drawable/phone_icon" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/name"
        android:layout_toEndOf="@id/phone_icon"
        android:layout_marginRight="9dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:hint="Phone Number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone_type"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/phone"
        android:layout_below="@id/name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@id/phone">

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="none"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="Phone Type"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_below="@id/phone_icon"
        android:layout_alignBottom="@id/email"
        android:src="@drawable/email_icon" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/phone"
        android:layout_toEndOf="@id/email_icon"
        android:layout_marginRight="9dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:hint="Email" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/email"
        android:layout_below="@id/phone_type"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@id/email">

        <AutoCompleteTextView
            android:id="@+id/email_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="Email Type"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/address_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_below="@id/email_icon"
        android:layout_alignBottom="@id/address"
        android:src="@drawable/address_icon" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/email"
        android:layout_toEndOf="@id/address_icon"
        android:layout_marginEnd="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:hint="Address" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/company_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_below="@id/address_icon"
        android:layout_alignBottom="@id/company"
        android:src="@drawable/company_icon" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/address"
        android:layout_toEndOf="@id/company_icon"
        android:layout_marginEnd="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:hint="Company" />

    </com.google.android.material.textfield.TextInputLayout>



</RelativeLayout>